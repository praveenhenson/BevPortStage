@model BevPort.Models.Users
<section class="registration-page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="inner">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="image-holder">
                                <img src="~/images/registration-form-6.jpg" alt="">
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="reg-forms">
                                <h2 class="main-heading-content">Login</h2>
                                <p class="content-para">Numbers don’t lie. We empower every aspect of your distribution so you can make a material impact on your bottom line.</p>
                                @* <form id="FormID" action="" name="Form" method="post">*@

                                @*<label style="color:red">@ViewBag.ErrorMessage</label>*@
                                <label class="error-message">@ViewBag.Message</label>
                                @* <form method="post" action="/User/Login">*@

                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label asp-for="EMAILID">Email</label>
                                            <span class="red-star">*</span>
                                            <input for="EMAILID" class="form-control" placeholder="" id="EMAILID" name="EMAILID" oninput="ValidateEmail()" onchange="ValidateEmail()" required="">
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label asp-for="PASSWORD">Password</label>
                                            <span class="red-star">*</span>
                                            <input asp-for="PASSWORD" type="password" class="form-control" placeholder="" id="PASSWORD" name="PASSWORD" oninput="ValidatePassword()" onchange="ValidatePassword()" required="">
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-12" style="align-items:center">
                                        <div class="form-btns" style="padding-left:150px">
                                            <button type="submit" class="btn btn-default" id="btnSubmit" onclick="LoginUser()" />
                                            Login</i>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div>
                                        <a href="@Url.Action("Index","User")" class="register">Register</a>
                                        <a href="@Url.Action("ForgotPassword","User")" class="forgetpass">Forgot Password ?</a>
                                    </div>

                                </div>


                                @*</form>*@

                                @*

                                *@

                            </div>



                        </div>
                    </div>
                </div>
                <!--End Registration Form-->
            </div>
        </div>
    </div>
</section>



